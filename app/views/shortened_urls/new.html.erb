<div class="row">
	<div class="col-xs-4 col-xs-offset-1">
		<h1>Shorten a URL</h1>
		<form action="<%= shortened_urls_url %>" method="POST">
			<input type="hidden"
				name="authenticity_token"
				value="<%= form_authenticity_token %>">
			<div class="form-group">
				<input class="form-control" type="text" name="url[long_url]">
			</div>
			<input class="btn btn-success" type="submit">
		</form>
	</div>
</div>